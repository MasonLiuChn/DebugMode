<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.masonliu.debugmode.library.test" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="22" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for net.masonliu.debugmode.library.test"
        android:targetPackage="net.masonliu.debugmode.library.test" />

    <application android:allowBackup="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="net.masonliu.debugmode.library.StageActivity"
            android:label="@string/app_name_stage" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.masonliu.debugmode.library.TestActivity"
            android:label="@string/app_name_test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>